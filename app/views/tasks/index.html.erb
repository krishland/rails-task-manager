<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(:id => task.id) %>
<%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>

<%= link_to "Add a new task",  new_task_path %>
